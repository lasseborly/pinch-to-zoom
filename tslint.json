{
    "extends": ["tslint:recommended"],
    "linterOptions": {
      "include": ["src/**/*.ts"]
    },
    "rules": {
      "quotemark": [true, "single"],
      "prefer-const": false,
      "typedef": [
        true,
        "call-signature",
        "arrow-call-signature",
        "parameter",
        "arrow-parameter",
        "property-declaration",
        "variable-declaration",
        "member-variable-declaration"
      ]
    }
}
